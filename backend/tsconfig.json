{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // Source files
    "outDir": "./dist", // Compiled JS output
    "module": "nodenext", // Node.js ESM support
    "target": "ES2020", // Modern JS output
    "lib": ["ES2020"], // Environment libraries

    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Node.js Support
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "types": ["node"], // Include Node.js types

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // JSX Support
    "jsx": "react-jsx",

    // Recommended Options
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Include all TS/TSX files in src
  "exclude": ["node_modules", "dist"] // Exclude build output & deps
}
